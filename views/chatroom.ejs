<%- include('base') %>

<% chatroom.forEach ((item) => { %>
    <div class="list-group">
    <a href="/chat/<%= item.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
            <h6 class="mb-0"><%= item.id %></h6>
            <h6 class="mb-0"><%= item.Chatroomusers[0] %><%= item.Chatroomusers[1] %></h6>
        </div>
        <small class="opacity-50 text-nowrap"><%= item.createdAt %></small>
        </div>
    </a>
    </div>
<% }) %>


<%- include('hooter') %>